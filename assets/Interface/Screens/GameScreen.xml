<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">


    
    
    <screen id="GameScreen" controller="game.screen.GameScreen">
        <layer id="windows" childLayout="absolute">
            <control id="CompanyMenu" name="window" title="Company Menu ( U )" width="200px" height="400px" x="200px">
                <text id="status_text" font="aurulent-sans-16.fnt" color="#ffff" text="" align="center" valign="center" width="200px" x="193" y="185" >
                    <effect>
                        <onStartScreen name="fade" startColor="#0000" endColor="#000f" length="1500" startDelay="250"/>
                    </effect>
                </text>
            </control>
            <control id="PlayerMenu" name="window" title="Player Menu ( P )" width="200px" height="400px" x="400px">
                <text id="status_text_PlayerMenu" font="aurulent-sans-16.fnt" color="#ffff" text="" align="center" valign="center" width="200px" x="193" y="185" >
                    <effect>
                        <onStartScreen name="fade" startColor="#0000" endColor="#000f" length="1500" startDelay="250"/>
                    </effect>
                </text>
            </control>   
            <control id="PlayerList" name="window" title="Player Online ( O )" width="140px" height="700px" x="0px">
                <text id="status_text_PlayerList" font="aurulent-sans-16.fnt" color="#ffff" text="" align="center" valign="center" width="200px">
                    <effect>
                        <onStartScreen name="fade" startColor="#0000" endColor="#000f" length="1500" startDelay="250"/>
                    </effect>
                </text>
            </control> 
            <control id="ChatWindow" name="window" title="ChatWindow ( T )" width="400px" height="200px" x="0px" y="700"> 
                
            </control>
        </layer>
    </screen>
